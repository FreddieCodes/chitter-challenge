<body>
<h1> WELCOME TO CHITTER </h1>

<a href="/timeline">View Peeps</a>
<br>
<h1> Timeline </h1>

<ul id='peeps'>
  <% @peeps.each do |peep| %>
    <li>
    <%= peep.message %>
    </li>
  <% end %>
</ul>

<div>

  <form action="/timeline" method="post">
    <label for="msg">Message:</label>
    <input type="text" name="msg" size="140" maxlength="140">
  <input type="submit" value="Add">
  </form>

</div>
